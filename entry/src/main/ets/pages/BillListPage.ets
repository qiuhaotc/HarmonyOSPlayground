    // å¯¼å‡ºæ•°æ®
    async exportData() {
        try {
            // æŸ¥è¯¢æ‰€æœ‰è´¦å•
            const allBills = await this.billDb.queryAllBills();

            if (allBills.length === 0) {
                this.getUIContext().showAlertDialog({
                    message: 'æ²¡æœ‰æ•°æ®å¯å¯¼å‡º',
                    confirm: {
                        value: 'ç¡®å®š', action: () => {
                        }
